{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "./lib",
        "rootDir": "./",
        "declaration": true,      
        "declarationDir": "./lib", 
        "sourceMap": true
    },
    "paths": {
        "@/*": [
            "./src/*"
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.js",
        "./**/*.mjs"
    ],
    "exclude": [
        "node_modules",
        "<node_internals>/**",
        "bin/**"
    ]
}
